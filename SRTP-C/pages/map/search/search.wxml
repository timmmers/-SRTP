<!--pages/map/search/search.wxml-->
<!--自定义的导航栏组件, 每个page头部都要有-->
<cu-custom bgColor="bg-gradual-myself" isBack="{{false}}" isCustom="{{true}}">
  <view slot="content" class="bold-text">智游畅行</view>
</cu-custom>

<view style="height: {{remainHeight}}px;">
  <!--绑定输入事件-->
  <view class="input-container" id="input">
    <input model:value="{{backfill}}" class="input" bindinput="getsuggest" placeholder="请输入园区关键字"></input>
    <image style="width: 37px;height: 37px;" bind:tap="onClickButton" src="/map-icons/send.png"></image>
  </view>

  <scroll-view scroll-y="true" style="max-height: {{scrollHeight}}px;">
    <view wx:for="{{suggestion}}" wx:key="index" class="items">
        <view style="text-align: center;margin-bottom: 10rpx;" bindtap="backfill" id="{{index}}">{{item.title}}</view>
        <view style="font-size:12px;color:#666;text-align: center;margin: 2rpx;">{{item.addr}}</view>
    </view>
  </scroll-view>
</view>




